<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EED96459" />
            <stroke
                android:width="1dp"
                android:color="#D96459" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DED96459"
                android:endColor="#DEec6659"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#D96459" />
            <size 
				android:width="40dp"
				android:height="40dp"
                />

        </shape>
    </item>
</selector>