<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EEC80000" />
            <stroke
                android:width="1dp"
                android:color="#980000" />
            <corners
        		android:bottomRightRadius="8dip"
        		android:bottomLeftRadius="8dip"  
   				android:topRightRadius="8dip"
        		android:topLeftRadius="8dip" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DEC80000"
                android:endColor="#DE980000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#980000" />
            <size 
				android:width="40dp"
				android:height="40dp"
                />
            <corners
                android:bottomRightRadius="8dip"
        		android:bottomLeftRadius="8dip"  
   				android:topRightRadius="8dip"
        		android:topLeftRadius="8dip" />

        </shape>
    </item>
</selector>