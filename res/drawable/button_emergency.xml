<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EE97282C" />
            <stroke
                android:width="1dp"
                android:color="#97282C" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DE97282C"
                android:endColor="#DE97282C"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#97282C" />
            <size 
				android:width="40dp"
				android:height="40dp"
                />

        </shape>
    </item>
</selector>