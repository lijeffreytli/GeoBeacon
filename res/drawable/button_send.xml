<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EE00e2ff" />
            <stroke
                android:width="1dp"
                android:color="#00b4cc" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DE00e2ff"
                android:endColor="#DE00b4cc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00b4cc" />
            <size 
				android:width="150dp"
				android:height="30dp"
                />

        </shape>
    </item>
</selector>