<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EEffc490" />
            <stroke
                android:width="1dp"
                android:color="#F2AE72" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DEffc490"
                android:endColor="#DEF2AE72"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#F2AE72" />
            <size 
				android:width="150dp"
				android:height="30dp"
                />

        </shape>
    </item>
</selector>