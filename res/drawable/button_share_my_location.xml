<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EE4AAAA5" />
            <stroke
                android:width="1dp"
                android:color="#474747" />
            <corners
        		android:bottomRightRadius="8dip"
        		android:bottomLeftRadius="8dip"  
   				android:topRightRadius="8dip"
        		android:topLeftRadius="8dip" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DE4AAAA5"
                android:endColor="#DE57d8d2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00b4cc" />
            <size 
				android:width="150dp"
				android:height="30dp"
                />
            <corners
                android:bottomRightRadius="8dip"
        		android:bottomLeftRadius="8dip"  
   				android:topRightRadius="8dip"
        		android:topLeftRadius="8dip" />

        </shape>
    </item>
</selector>