<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EED8A027" />
            <stroke
                android:width="1dp"
                android:color="#D8A027" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DED8A027"
                android:endColor="#DEecad26"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#D8A027" />
            <size 
				android:width="150dp"
				android:height="30dp"
                />

        </shape>
    </item>
</selector>