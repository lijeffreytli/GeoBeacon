<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.seecondev.seecon.MainActivity" >

    <Button
        android:id="@+id/button_share_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button_emergency"
        android:onClick="shareMyLocation"
        android:text="@string/share_my_location"
        android:typeface="sans" />

     <Button
         android:id="@+id/button_emergency"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button_share_my_location"
         android:layout_alignBottom="@+id/button_share_my_location"
         android:layout_alignParentRight="true"
         android:onClick="getEmergency"
         android:text="!"
         android:typeface="sans" />
     
     <TextView
         android:id="@+id/text_view_title"
         android:layout_width="wrap_content"
         android:layout_height="90dp"
         android:layout_above="@+id/button_share_my_location"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_marginTop="3dp"
         android:textColor="@color/cyan"
         android:textSize="18sp"
         android:gravity="center"/>

     <fragment
         android:id="@+id/map"
         android:name="com.google.android.gms.maps.MapFragment"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_above="@+id/text_view_title"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true" />

     

</RelativeLayout>
