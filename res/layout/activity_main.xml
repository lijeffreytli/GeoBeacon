<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.seecondev.seecon.MainActivity" >
     
     <TextView
         android:id="@+id/text_view_title"
         android:layout_width="wrap_content"
         android:layout_height="90dp"
         android:layout_above="@+id/button_share_my_location"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:background="@drawable/text_border"
         android:gravity="left"
         android:textColor="@color/cyan"
         android:textSize="19sp" />

     <fragment
         android:id="@+id/map"
         android:name="com.google.android.gms.maps.MapFragment"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_above="@+id/text_view_title"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true" />

     <Button
         android:id="@+id/button_emergency"
         android:layout_width="55dp"
         android:layout_height="40dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="5dp"
         android:layout_marginLeft="2.5dp"
         android:onClick="getEmergency"
         android:text="!"
         android:background="@drawable/button_emergency"
         android:typeface="sans" />

     <Button
         android:id="@+id/button_share_my_location"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_alignBaseline="@+id/button_emergency"
         android:layout_alignBottom="@+id/button_emergency"
         android:layout_alignParentLeft="true"
         android:layout_toLeftOf="@+id/button_emergency"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="2.5dp"
         android:layout_marginTop="2.5dp"
         android:background="@drawable/button_default_style"
         android:onClick="shareMyLocation"
         android:text="@string/share_my_location"
         android:typeface="sans" />

</RelativeLayout>
