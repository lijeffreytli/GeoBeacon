<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_send"
        android:text="Send" />

    <EditText
        android:id="@+id/editCompleteMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonContacts"
        android:ems="20"
        android:textSize="22sp"
        android:hint="Complete Message"
        android:inputType="textMultiLine"
        android:maxHeight="140dp"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonContacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonContacts"
        android:ems="20"
        android:hint="Select a Contact"
        android:background="@drawable/text_border"
        android:singleLine="true"
        android:textSize="22sp" >

        <requestFocus />
    </EditText>
        
    <Button
        android:id="@+id/buttonContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="getContacts"
        android:background="@drawable/button_default_style"
        android:text="Contacts" />

    <EditText
        android:id="@+id/editMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSend"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editCompleteMessage"
        android:ems="20"
        android:textSize="22sp"
        android:hint="Enter a message"
        android:background="@drawable/text_border"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" >
        <requestFocus />
    </EditText>

</RelativeLayout>