<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/werkred</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">3dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/werkred</item>
        <item name="android:background">@color/werkwhite</item>
    </style>

    <style name="settingsPreferenceTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@color/werkgreen</item>
        <item name="android:textColorSecondary">@color/werknavy </item>
        <item name="android:textColorTertiary">@color/werknavy</item>
        <item name="android:textSize">17sp</item>   
        
        <!-- Action bar customization -->
        <item name="android:actionBarStyle">@style/SettingActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/werkwhite</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- Main Page Theme -->
    <style name="MainTheme" parent="@android:style/Theme.Holo.Light">

        <!-- Action bar customization -->
        <item name="android:actionBarStyle">@style/MainActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/katieteal</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- Main Page Theme ActionBar -->
    <style name="MainActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/katiewhite</item>
        <item name="android:titleTextStyle">@style/MainActionBarTextColor</item>
    </style>

    <!-- Share My Location Theme -->
    <style name="ShareMyLocationTheme" parent="Theme.AppCompat.Light">

        <!-- Action bar customization -->
        <item name="android:actionBarStyle">@style/ShareMyLocationActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/werkwhite</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- ShareMyLocation Theme ActionBar -->
    <style name="ShareMyLocationActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#F2AE72</item>
        <item name="android:titleTextStyle">@style/ShareMyLocationActionBarTextColor</item>
    </style>

    <!-- Emergency Theme -->
    <style name="EmergencyTheme" parent="Theme.AppCompat.Light">

        <!-- Action bar customization -->
        <item name="android:actionBarStyle">@style/EmergencyActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/werkwhite</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- Emergency Theme ActionBar -->
    <style name="EmergencyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#E45F56</item>
        <item name="android:titleTextStyle">@style/EmergencyActionBarTextColor</item>
    </style>
    
    <!-- Setting Theme -->
    <style name="SettingTheme" parent="Theme.AppCompat.Light">

        <!-- Action bar customization -->
        <item name="android:actionBarStyle">@style/SettingActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/werkwhite</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <!-- Setting Theme ActionBar -->
    <style name="SettingActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/werkgreen</item>
        <item name="android:titleTextStyle">@style/SettingActionBarTextColor</item>
    </style>

    <!-- Emergency Title Text Color -->
    <style name="EmergencyActionBarTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/werkwhite</item>
    </style>
    
    <!-- Main Activity Title Text Color -->
    <style name="MainActionBarTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- ShareMyLocation Title Text Color -->
    <style name="ShareMyLocationActionBarTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/werkwhite</item>
    </style>
    
    <!-- Setting Title Text Color -->
    <style name="SettingActionBarTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/werkwhite</item>
    </style>
    
    
    
    
    
    
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/werkwhite</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

</resources>