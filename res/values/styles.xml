<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#00E2FF</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#00E2FF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">7dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#00E2FF</item>
        <item name="android:background">#2f2f2f</item>
    </style>

    <style name="settingsPreferenceTheme" parent="AppBaseTheme">
        <item name="android:textColorPrimary">@color/cyan</item>
        <item name="android:textColorSecondary">#E8E8E8 </item>
        <item name="android:textColorTertiary">#E8E8E8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/black</item>
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:windowBackground">@color/black</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">            @style/spinnerItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">            @style/spinnerDropDownItemStyle</item>
    </style>

</resources>